<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeMarginMedium2"
        app:srcCompat="@drawable/avatar1"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayArrow"
        android:layout_width="@dimen/margin_xlarge"
        android:layout_height="@dimen/margin_xlarge"
        app:srcCompat="@drawable/ic_play"
        android:tint="@color/based_white"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFileRemove"
        android:layout_width="@dimen/margin_xlarge"
        android:layout_height="@dimen/margin_xlarge"
        app:srcCompat="@drawable/ic_close"
        android:tint="@color/based_white"
        android:layout_alignEnd="@id/ivFileImage"

        />


</RelativeLayout>